<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Panini Error</title>
    <meta type="viewport" content="width=device-width">
    <style>
      html {
        box-sizing: border-box;
        font-family:
          -apple-system, BlinkMacSystemFont,
          "Segoe UI", "Roboto", "Oxygen", "Ubuntu", "Cantarell",
          "Fira Sans", "Droid Sans", "Helvetica Neue",
          sans-serif;
      }

      *,
      *::before,
      *::after {
        margin: 0;
        padding: 0;
        box-sizing: inherit;
      }

      .container {
        max-width: 600px;
        margin: 32px auto;
        position: relative;
      }

      .title {
        font-weight: bold;
        font-size: 32px;
        color: #d24b4b;
        border-bottom: 1px solid #d24b4b;
        padding-bottom: 10px;
        margin-bottom: 32px;
      }

      .subtitle {
        font-size: 16px;
        font-weight: bold;
        margin-bottom: 16px;
      }

      .filename {
        color: #d24b4b;
        opacity: 0.5;
        font-size: 16px;
        font-weight: bold;
        position: absolute;
        top: 16px;
        right: 0;
      }

      .pre {
        font-size: 16px;
        font-family: monospace;
        line-height: 1.5;
        overflow-x: scroll;
        color: #000;
      }

      .message {
        padding-bottom: 32px;
        border-bottom: 1px solid #ccc;
        margin-bottom: 32px;
      }

      .stack {
        color: #999;
        line-height: 2;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1 class="title">Panini Error</h1>
      <p class="filename">{{ fileName }}</p>
<pre class="pre message">{{ message }}</pre>
      <h2 class="subtitle">Stack Trace:</h2>
<pre class="pre stack">{{ stack }}</pre>
    </div>
  </body>
</html>
